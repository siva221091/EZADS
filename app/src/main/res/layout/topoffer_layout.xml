<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_marginTop="15dp"
    android:scrollbars="none"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    android:background="#ffffff"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/productimg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@drawable/tv1"
                 />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/product_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SONY TV 43 INCH 1080 FULL SCREEN HD MODEL 456789 SMART TV"
                    android:textColor="#0B46AD"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/circleView"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_below="@+id/product_title"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/timedate" />

                <TextView
                    android:id="@+id/exp_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_title"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="16dp"
                    android:text="24 hrs"
                    android:textSize="15sp"
                    android:textColor="#0B46AD"
                    />

                <ImageView
                    android:id="@+id/comment"
                    android:layout_width="31dp"
                    android:layout_height="37dp"
                    android:layout_below="@+id/product_title"
                    android:layout_marginStart="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@+id/exp_times"
                    android:layout_toRightOf="@+id/exp_times"
                    android:contentDescription="AAAAAAA"
                    android:src="@drawable/gift" />

                <TextView
                    android:id="@+id/offer_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_title"
                    android:layout_marginLeft="48dp"
                    android:layout_marginTop="16dp"
                    android:layout_toEndOf="@+id/exp_times"
                    android:layout_toRightOf="@+id/exp_times"
                    android:text="45 %"
                    android:textSize="15sp"
                    android:textColor="#0B46AD"
                    />

                <TextView
                    android:id="@+id/product_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/exp_times"
                    android:layout_marginTop="24dp"
                    android:text="Here we will show the details of this products,offer details and expire date of offers"
                    android:textSize="18sp"
                    android:textColor="#0B46AD"
                    />

                <Button
                    android:id="@+id/read_more"
                    android:layout_width="116dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/product_details"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="271dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edittextstyle"
                    android:text="VIEW ALL" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</ScrollView>